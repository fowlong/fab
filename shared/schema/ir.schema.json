{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocumentIR",
  "type": "object",
  "properties": {
    "documentMeta": {
      "type": "object",
      "properties": {
        "fileName": { "type": "string" },
        "pageCount": { "type": "integer", "minimum": 1 },
        "originalPdf": { "type": "string" }
      },
      "required": ["fileName", "pageCount"]
    },
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": { "type": "integer" },
          "widthPt": { "type": "number" },
          "heightPt": { "type": "number" },
          "objects": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "kind": { "type": "string" },
                "bbox": {
                  "type": "array",
                  "items": { "type": "number" },
                  "minItems": 4,
                  "maxItems": 4
                }
              },
              "required": ["id", "kind", "bbox"]
            }
          }
        },
        "required": ["index", "widthPt", "heightPt", "objects"]
      }
    }
  },
  "required": ["documentMeta", "pages"]
}
