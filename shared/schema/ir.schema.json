{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocumentIR",
  "type": "object",
  "required": ["pages"],
  "properties": {
    "pages": {
      "type": "array",
      "items": { "$ref": "#/definitions/Page" }
    }
  },
  "definitions": {
    "Page": {
      "type": "object",
      "required": ["index", "widthPt", "heightPt", "objects"],
      "properties": {
        "index": { "type": "integer", "minimum": 0 },
        "widthPt": { "type": "number" },
        "heightPt": { "type": "number" },
        "objects": {
          "type": "array",
          "items": { "$ref": "#/definitions/Object" }
        }
      }
    },
    "Object": {
      "type": "object",
      "required": ["id", "kind"],
      "properties": {
        "id": { "type": "string" },
        "kind": { "type": "string", "enum": ["text", "image", "path"] },
        "bbox": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        }
      },
      "allOf": [
        {
          "if": { "properties": { "kind": { "const": "text" } } },
          "then": {
            "required": ["Tm", "font", "unicode"],
            "properties": {
              "Tm": { "type": "array", "items": { "type": "number" }, "minItems": 6, "maxItems": 6 },
              "font": {
                "type": "object",
                "required": ["resName", "size", "type"],
                "properties": {
                  "resName": { "type": "string" },
                  "size": { "type": "number" },
                  "type": { "type": "string" }
                }
              },
              "unicode": { "type": "string" }
            }
          }
        },
        {
          "if": { "properties": { "kind": { "enum": ["image", "path"] } } },
          "then": {
            "required": ["cm"],
            "properties": {
              "cm": { "type": "array", "items": { "type": "number" }, "minItems": 6, "maxItems": 6 }
            }
          }
        }
      ]
    }
  }
}
