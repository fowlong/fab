{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PatchOperations",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "op": { "type": "string", "enum": ["transform", "editText", "setStyle"] },
      "target": {
        "type": "object",
        "properties": {
          "page": { "type": "integer", "minimum": 0 },
          "id": { "type": "string" }
        },
        "required": ["page", "id"]
      }
    },
    "required": ["op", "target"]
  }
}
