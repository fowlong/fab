{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patch operations",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["op", "target"],
    "properties": {
      "op": { "type": "string" },
      "target": {
        "type": "object",
        "required": ["page", "id"],
        "properties": {
          "page": { "type": "integer", "minimum": 0 },
          "id": { "type": "string" }
        }
      }
    },
    "allOf": [
      {
        "if": { "properties": { "op": { "const": "transform" } } },
        "then": {
          "required": ["deltaMatrixPt", "kind"],
          "properties": {
            "deltaMatrixPt": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 6,
              "maxItems": 6
            },
            "kind": { "type": "string" }
          }
        }
      },
      {
        "if": { "properties": { "op": { "const": "editText" } } },
        "then": {
          "required": ["text"],
          "properties": {
            "text": { "type": "string" }
          }
        }
      }
    ]
  }
}
