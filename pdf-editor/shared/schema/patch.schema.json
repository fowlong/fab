{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PatchOps",
  "type": "array",
  "items": { "$ref": "#/definitions/operation" },
  "definitions": {
    "operation": {
      "type": "object",
      "required": ["op", "target"],
      "properties": {
        "op": { "type": "string", "enum": ["transform", "editText", "setStyle"] },
        "target": { "$ref": "#/definitions/target" },
        "deltaMatrixPt": { "$ref": "#/definitions/matrix" },
        "kind": { "type": "string", "enum": ["text", "image", "path"] },
        "text": { "type": "string" },
        "fontPref": {
          "type": "object",
          "properties": {
            "preferExisting": { "type": "boolean" },
            "fallbackFamily": { "type": "string" }
          },
          "additionalProperties": false
        },
        "style": {
          "type": "object",
          "properties": {
            "opacityFill": { "type": "number", "minimum": 0, "maximum": 1 },
            "opacityStroke": { "type": "number", "minimum": 0, "maximum": 1 },
            "fillColor": { "type": "string" },
            "strokeColor": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "target": {
      "type": "object",
      "required": ["page", "id"],
      "properties": {
        "page": { "type": "integer", "minimum": 0 },
        "id": { "type": "string" }
      },
      "additionalProperties": false
    },
    "matrix": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 6,
      "maxItems": 6
    }
  }
}
