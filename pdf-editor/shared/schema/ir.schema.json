{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Intermediate Representation",
  "type": "object",
  "properties": {
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": { "type": "integer", "minimum": 0 },
          "widthPt": { "type": "number", "minimum": 0 },
          "heightPt": { "type": "number", "minimum": 0 },
          "objects": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "kind", "pdfRef", "bbox"],
              "properties": {
                "id": { "type": "string" },
                "kind": { "type": "string", "enum": ["text", "image", "path"] },
                "pdfRef": {
                  "type": "object",
                  "properties": {
                    "obj": { "type": "integer", "minimum": 0 },
                    "gen": { "type": "integer", "minimum": 0 }
                  },
                  "required": ["obj", "gen"]
                },
                "bbox": {
                  "type": "array",
                  "items": { "type": "number" },
                  "minItems": 4,
                  "maxItems": 4
                }
              },
              "allOf": [
                {
                  "if": { "properties": { "kind": { "const": "text" } } },
                  "then": {
                    "required": ["Tm", "font", "unicode", "glyphs"],
                    "properties": {
                      "Tm": {
                        "type": "array",
                        "items": { "type": "number" },
                        "minItems": 6,
                        "maxItems": 6
                      },
                      "font": {
                        "type": "object",
                        "properties": {
                          "resName": { "type": "string" },
                          "size": { "type": "number" },
                          "type": { "type": "string" }
                        },
                        "required": ["resName", "size", "type"]
                      },
                      "unicode": { "type": "string" },
                      "glyphs": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "gid": { "type": "integer", "minimum": 0 },
                            "dx": { "type": "number" },
                            "dy": { "type": "number" }
                          },
                          "required": ["gid", "dx", "dy"]
                        }
                      }
                    }
                  }
                }
              ]
            }
          }
        },
        "required": ["index", "widthPt", "heightPt", "objects"]
      }
    }
  },
  "required": ["pages"]
}
