{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/ir.schema.json",
  "title": "IntermediateRepresentation",
  "type": "object",
  "properties": {
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "widthPt", "heightPt", "objects"],
        "properties": {
          "index": { "type": "integer", "minimum": 0 },
          "widthPt": { "type": "number" },
          "heightPt": { "type": "number" },
          "objects": {
            "type": "array",
            "items": { "$ref": "#/definitions/object" }
          }
        }
      }
    }
  },
  "required": ["pages"],
  "definitions": {
    "object": {
      "type": "object",
      "required": ["id", "kind", "bbox"],
      "properties": {
        "id": { "type": "string" },
        "kind": { "enum": ["text", "image", "path"] },
        "bbox": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        },
        "unicode": { "type": "string" },
        "font": {
          "type": "object",
          "properties": {
            "resName": { "type": "string" },
            "size": { "type": "number" },
            "type": { "type": "string" }
          },
          "required": ["resName", "size", "type"]
        },
        "xObject": { "type": "string" }
      },
      "allOf": [
        {
          "if": { "properties": { "kind": { "const": "text" } } },
          "then": { "required": ["unicode", "font"] }
        },
        {
          "if": { "properties": { "kind": { "const": "image" } } },
          "then": { "required": ["xObject"] }
        }
      ]
    }
  }
}
