{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/ir.schema.json",
  "title": "DocumentIR",
  "type": "object",
  "required": ["docId", "pages"],
  "properties": {
    "docId": { "type": "string" },
    "sourcePdf": { "type": "string", "format": "uri" },
    "pages": {
      "type": "array",
      "items": { "$ref": "#/definitions/PageIR" }
    }
  },
  "definitions": {
    "PageIR": {
      "type": "object",
      "required": ["index", "widthPt", "heightPt", "objects"],
      "properties": {
        "index": { "type": "integer", "minimum": 0 },
        "widthPt": { "type": "number" },
        "heightPt": { "type": "number" },
        "objects": {
          "type": "array",
          "items": { "$ref": "#/definitions/ObjectIR" }
        }
      }
    },
    "ObjectIR": {
      "type": "object",
      "required": ["id", "pageIndex", "kind", "bbox"],
      "properties": {
        "id": { "type": "string" },
        "pageIndex": { "type": "integer", "minimum": 0 },
        "kind": { "enum": ["text", "image", "path"] },
        "bbox": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        }
      },
      "allOf": [
        {
          "if": { "properties": { "kind": { "const": "text" } } },
          "then": {
            "required": ["Tm", "unicode", "font"],
            "properties": {
              "Tm": {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 6,
                "maxItems": 6
              },
              "unicode": { "type": "string" },
              "font": {
                "type": "object",
                "required": ["resName", "size", "type"],
                "properties": {
                  "resName": { "type": "string" },
                  "size": { "type": "number" },
                  "type": { "type": "string" }
                }
              }
            }
          }
        }
      ]
    }
  }
}
