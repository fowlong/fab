{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocumentIR",
  "type": "object",
  "properties": {
    "pages": {
      "type": "array",
      "items": { "$ref": "#/definitions/Page" }
    }
  },
  "required": ["pages"],
  "definitions": {
    "Page": {
      "type": "object",
      "properties": {
        "index": { "type": "integer" },
        "widthPt": { "type": "number" },
        "heightPt": { "type": "number" },
        "objects": {
          "type": "array",
          "items": { "$ref": "#/definitions/PageObject" }
        }
      },
      "required": ["index", "widthPt", "heightPt", "objects"]
    },
    "PageObject": {
      "type": "object",
      "required": ["id", "kind", "bbox"],
      "properties": {
        "id": { "type": "string" },
        "kind": { "type": "string", "enum": ["text", "image", "path"] },
        "bbox": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        }
      }
    }
  }
}
