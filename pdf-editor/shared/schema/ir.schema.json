{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocumentIR",
  "type": "object",
  "properties": {
    "docId": { "type": "string" },
    "sourceUrl": { "type": "string", "format": "uri" },
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": { "type": "integer", "minimum": 0 },
          "widthPt": { "type": "number" },
          "heightPt": { "type": "number" },
          "objects": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "kind": { "type": "string", "enum": ["text", "image", "path"] },
                "bbox": {
                  "type": "array",
                  "items": { "type": "number" },
                  "minItems": 4,
                  "maxItems": 4
                },
                "transform": {
                  "type": "array",
                  "items": { "type": "number" },
                  "minItems": 6,
                  "maxItems": 6
                }
              },
              "required": ["id", "kind", "bbox"]
            }
          }
        },
        "required": ["index", "widthPt", "heightPt", "objects"]
      }
    }
  },
  "required": ["docId", "pages"]
}
