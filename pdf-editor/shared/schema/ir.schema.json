{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PDF Intermediate Representation",
  "type": "object",
  "properties": {
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": { "type": "integer", "minimum": 0 },
          "widthPt": { "type": "number" },
          "heightPt": { "type": "number" },
          "objects": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "kind", "bbox"],
              "properties": {
                "id": { "type": "string" },
                "kind": { "type": "string", "enum": ["text", "image", "path"] },
                "bbox": { "type": "array", "minItems": 4, "maxItems": 4, "items": { "type": "number" } }
              }
            }
          }
        },
        "required": ["index", "widthPt", "heightPt", "objects"]
      }
    }
  },
  "required": ["pages"]
}
