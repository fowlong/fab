{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PDF Intermediate Representation",
  "type": "object",
  "properties": {
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "widthPt", "heightPt", "objects"],
        "properties": {
          "index": {"type": "integer", "minimum": 0},
          "widthPt": {"type": "number"},
          "heightPt": {"type": "number"},
          "objects": {
            "type": "array",
            "items": {"type": "object"}
          }
        }
      }
    }
  },
  "required": ["pages"]
}
