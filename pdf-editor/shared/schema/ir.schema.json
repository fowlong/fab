{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Intermediate Representation",
  "type": "object",
  "properties": {
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": {"type": "integer", "minimum": 0},
          "widthPt": {"type": "number"},
          "heightPt": {"type": "number"},
          "objects": {
            "type": "array",
            "items": {
              "type": "object",
              "oneOf": [
                {"required": ["kind"], "properties": {"kind": {"const": "text"}}},
                {"required": ["kind"], "properties": {"kind": {"const": "image"}}},
                {"required": ["kind"], "properties": {"kind": {"const": "path"}}}
              ]
            }
          }
        },
        "required": ["index", "widthPt", "heightPt", "objects"]
      }
    }
  },
  "required": ["pages"]
}
