{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocumentIR",
  "type": "object",
  "properties": {
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": { "type": "integer" },
          "widthPt": { "type": "number" },
          "heightPt": { "type": "number" },
          "objects": {
            "type": "array",
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "properties": {
                    "kind": { "const": "text" },
                    "id": { "type": "string" },
                    "Tm": {
                      "type": "array",
                      "items": { "type": "number" },
                      "minItems": 6,
                      "maxItems": 6
                    }
                  },
                  "required": ["kind", "id", "Tm"]
                },
                {
                  "properties": {
                    "kind": { "const": "image" },
                    "id": { "type": "string" },
                    "cm": {
                      "type": "array",
                      "items": { "type": "number" },
                      "minItems": 6,
                      "maxItems": 6
                    }
                  },
                  "required": ["kind", "id", "cm"]
                }
              ]
            }
          }
        },
        "required": ["index", "widthPt", "heightPt", "objects"]
      }
    }
  },
  "required": ["pages"]
}
